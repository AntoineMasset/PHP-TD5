{% extends 'header.html.twig' %}
{% block content %}

	<h2>Identification</h2>

	{% if msgErreurMdp %}
		<div class="alert alert-danger">
		    Mauvais mot de passe.
		</div>
	{% endif %}

	{% if msgErreurLogin  %}
		<div class="alert alert-danger">
	    	L'utilisateur {{ login }} n'existe pas.
		</div>
	{% endif %}	


	{% if msgSuccess %}
		<div class="alert alert-success">
		    Vous êtes identifié en tant que {{ login }}
		</div>
	{% endif %}

	<form method="post" class="form-horizontal" action="{{ path('checkUser')}}">
	    <div class="form-group">
	        <label class="col-sm-2" for="login">Identifiant</label>
	        <div class="col-sm-10">
	            <input required="required" class="form-control" type="text" id="login" name="login" />
	        </div>
	    </div>
	    <div class="form-group">
	        <label class="col-sm-2" for="password">Mot de passe</label>
	        <div class="col-sm-10">
	            <input required="required" class="form-control" type="password" id="password" name="password" />
	        </div>
	    </div>
	    <div class="form-group">
	        <div class="col-sm-2">&nbsp;</div>
	        <div class="col-sm-10">
	            <input type="submit" class="btn btn-success" value="Enregistrer" />
	        </div>
	    </div>
	</form>

{% endblock %}